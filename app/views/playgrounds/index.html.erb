<h1>All playgrounds</h1>

<div class="grid-wrapper-all">

  <div class="grid-wrapper-playgrounds">
    <% @playgrounds.each do |playground| %>
      <div class="card-playground">
        <div class="playground-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1520640292646-2c3753cf3ae4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2102&q=80)">
        </div>
        <div class="playground-info">
          <div class="title-address">
            <div class="playground-name">
              <%= playground.name %>
            </div>
            <div class="playground-address">
              <%= playground.address %>
            </div>
          </div>
          <div class="player-participation">
            <%= render partial: "shared/nearby_participations", locals: {playground: playground} %>
          </div>
          <div class="join-playground">
            <%= link_to 'Join', playground_path(playground) %>
          </div>
        </div>
      </div>
    <% end %>
    <%= link_to 'Add a playground', new_playground_path %>
  </div>

  <div
    id="map"
    style="width: 50%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>

</div>


