<div class="mb-3">
  <%= @playground.name %> -
  <%= @playground.address %>
</div>

<hr />

<div class="col">
  <div class="messagebox">
    <% if @participations.present? %>
      <% @participations.each do |participation| %>
        <ul class="list-inline">
          <li class="list-inline-item"><%= participation.user.nickname  %></li>
          <li class="list-inline-item"><%= participation.start_date  %></li>
          <li class="list-inline-item"><%= participation.end_date  %></li>
          <li class="list-inline-item"><%= participation.status  %></li>
        </ul>
      <% end %>

    <% else %>
        <p>No participants yet</p>
    <% end %>
  </div>
</div>

<hr />

<%= simple_form_for [@playground, @participation] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= f.input :start_date,
              class: "form-controlform-text text-muted"%>
  <%= f.input :end_date,
              class: "form-control form-text text-muted" %>
  <%= f.button :submit, class: "btn btn-primary"  %>
<% end %>
