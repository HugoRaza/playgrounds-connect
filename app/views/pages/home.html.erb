<div class="homepage-bloc">
  <div class="titles">
    <h1 id="main-title">Playgroundz</h1>

    <h2 id="subtitle">Do not play alone!</h2>

    <div class="button-home">
        <%= form_tag(playgrounds_path, method: :get, class: 'input-group') do %>
          <%= text_field_tag :term, params[:term], class: 'form-control', placeholder: 'Search for a city' %>
          <span class="input-group-btn">
          <%= submit_tag 'Play', city: nil, class: "btn btn-primary" %>
          </span>
        <% end %>
    </div>
  </div>
</div>





