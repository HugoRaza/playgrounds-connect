<!DOCTYPE html>
<html>
  <head>
    <title>Playground - find your basketball mates</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render 'shared/navbar' %>
    <%= render 'shared/flashes' %>
    <div class="homepage-bloc">
    <div class="titles">
      <h1 id="main-title">Playgroundz</h1>

      <h2 id="subtitle">Do not play alone!</h2>

      <%= form_tag(playgrounds_path, method: :get) do %>
          <%= select :city, params[:city], @cities.each.map {|name| [name.capitalize]}, {prompt: 'Select a city'} %>
          <%= submit_tag 'Play', city: nil, class: "btn btn-primary" %>
      <% end %>
    </div>

  </div>


  </body>
</html>





